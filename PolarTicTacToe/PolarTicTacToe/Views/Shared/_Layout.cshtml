<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Assets/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Assets/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Assets/css/site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
	@RenderSection("ExtraHeaderContent", required: false)
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Konrad Group Template</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
			  <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            <p class="navbar-text pull-right">@Html.Partial("_LogOnPartial")</p>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

	<div class="container-fluid main-content">
		@RenderBody()

		<footer>
			&copy; @DateTime.Now.Year
		</footer>
	</div>

	<script src="@Url.Content("~/Assets/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
	@RenderSection("FooterScripts", required: false)
</body>
</html>